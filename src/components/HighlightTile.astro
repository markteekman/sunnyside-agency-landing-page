---
const {img, title, color} = Astro.props
---

<div class="{`highlight-tile clr-${color}`}" style="{`background-image: url('/assets/image-${img}.jpg')`}">
  <h2>{title}</h2>
  <p><slot /></p>
</div>

<style lang="scss">
  @use "../styles/base/breakpoint" as *;
  @use "../styles/base/size" as *;

  .highlight-tile {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    gap: 1.5rem;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: top center;
    background-repeat: no-repeat;
    text-align: center;
    padding: 60% 1rem 2rem;

    @include breakpoint(medium) {
      padding: 70% 4rem 2rem;
    }

    @include breakpoint(large) {
      padding: 70% 9rem 2rem;
    }

    &.clr-green { color: var(--primary-clr-dark-cyan); }
    &.clr-blue { color: var(--primary-clr-dark-blue); }

    p {
      @include size-16;
      line-height: 1.75rem;
    }
  }
</style>