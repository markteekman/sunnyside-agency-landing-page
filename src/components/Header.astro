---
import SkipLinks from '../components/SkipLinks.astro'
import Navigation from '../components/Navigation.astro'
import ResponsiveToggle from '../components/ResponsiveToggle.astro'
import HeroTile from '../components/HeroTile.astro'
---

<header>
  <SkipLinks client:load />
  <section class="padding-16 color-neutral">
    <div class="container">
      <img src="/assets/logo.svg" alt="Sunnyside Agency logo">
      <ResponsiveToggle client:load />
      <Navigation client:load />
    </div>
  </section>
  <HeroTile />
</header>

<style lang="scss">
  @use "../styles/base/breakpoint" as *;

  .container  {
    gap: 1rem;
    
    img {
      max-height: 40px;
    }

    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;

    @include breakpoint(medium) {
      flex-wrap: nowrap;
    }
  }
</style>