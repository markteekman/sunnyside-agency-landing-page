---
const {id, img} = Astro.props
---

<div id="{id}" class="image-tile">
  <img src="{`assets/mobile/image-${img}.jpg`}" alt="" class="is-mobile">
  <img src="{`assets/image-${img}.jpg`}" alt="" class="is-desktop">
</div>

<style lang="scss">
  @use "../styles/base/breakpoint" as *;

  .image-tile {
    width: 100%;
    height: 100%;
    aspect-ratio: 4 / 3;

    .is-mobile {
      display: block;

      @include breakpoint(medium) {
        display: none;
      }
    }

    .is-desktop {
      display: none;

      @include breakpoint(medium) {
        display: block;
      }
    }
  }
</style>